{
  "name": "@platformbuilders/wallet-bridge-react-native",
  "version": "0.1.0",
  "description": "Este repositório contém um pacote React Native para integração com carteiras digitais. Ele atua como uma ponte (bridge) que se conecta aos SDKs nativos de cada carteira, abstraindo a complexidade dos fluxos de provisionamento (Push e App2App). Inicialmente compatível com Google Pay Wallet, com planos de expansão para Samsung Pay e Apple Wallet.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-builders-wallet-example",
    "test": "jest",
    "typecheck": "tsc",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it --only-version",
    "pkg:pefisa": "./scripts/change-android-package-name-app-example.sh --package-name=br.com.pefisa.pefisa.hml",
    "pkg:example": "./scripts/change-android-package-name-app-example.sh --package-name=com.example.wallet",
    "pkg:palmeiras": "./scripts/change-android-package-name-app-example.sh --package-name=br.com.pefisa.palmeiras.hml",
    "build:app-example": "./scripts/build-android-example.sh",
    "build:google-wallet-mock": "./scripts/build-android-google-wallet-mock.sh",
    "build:samsung-wallet-mock": "./scripts/build-android-samsung-wallet-mock.sh",
    "log:google-wallet": "./scripts/quick-log-google-wallet.sh",
    "log:samsung-wallet": "./scripts/quick-log-samsung-wallet.sh",
    "log:wallets": "./scripts/log-wallets.sh"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformbuilders/wallet-bridge.git"
  },
  "author": "neijrbuilders <nei.vitor@platformbuilders.io> (https://github.com/neijrbuilders)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/platformbuilders/wallet-bridge/issues"
  },
  "homepage": "https://github.com/platformbuilders/wallet-bridge#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "15.0.0-alpha.2",
    "@react-native/babel-preset": "0.81.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.1.0",
    "del-cli": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.1.0",
    "react-native": "0.81.0",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "BuildersWalletSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.builders.wallet"
    }
  },
  "react-native": {
    "android": {
      "sourceDir": "./android",
      "packageImportPath": "import com.builders.wallet.BuildersWalletPackage;"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.53.0"
  }
}
