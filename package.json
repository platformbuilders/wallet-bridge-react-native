{
  "name": "@platformbuilders/wallet-bridge-react-native",
  "version": "1.0.2",
  "description": "Este repositório contém um pacote React Native para integração com carteiras digitais. Ele atua como uma ponte (bridge) que se conecta aos SDKs nativos de cada carteira, abstraindo a complexidade dos fluxos de provisionamento (Push e App2App). Inicialmente compatível com Google Pay Wallet, com planos de expansão para Samsung Pay e Apple Wallet.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-builders-wallet-example",
    "build": "bob build",
    "test": "jest",
    "lint": "yarn typecheck && eslint 'src/**/*.{js,jsx,ts,tsx}' --fix --cache",
    "pretty": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "pkg:example": "./scripts/change-android-package-name-app-example.sh --package-name=com.example.wallet",
    "pkg:custom": "./scripts/change-android-package-name-app-example.sh",
    "build:app-example": "./scripts/build-android-example.sh",
    "build:google-wallet-mock": "./scripts/build-android-google-wallet-mock.sh",
    "build:samsung-wallet-mock": "./scripts/build-android-samsung-wallet-mock.sh",
    "log:google-wallet": "./scripts/quick-log-google-wallet.sh",
    "log:samsung-wallet": "./scripts/quick-log-samsung-wallet.sh",
    "log:wallets": "./scripts/log-wallets.sh"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformbuilders/wallet-bridge.git"
  },
  "author": "neijrbuilders <nei.vitor@platformbuilders.io> (https://github.com/neijrbuilders)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/platformbuilders/wallet-bridge/issues"
  },
  "homepage": "https://github.com/platformbuilders/wallet-bridge#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "15.0.0-alpha.2",
    "@react-native/babel-preset": "0.81.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "del-cli": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.0",
    "react-native-builder-bob": "^0.30.2",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^18.1.0",
    "react-native": "^0.70.6"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "BuildersWalletSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.builders.wallet"
    }
  },
  "react-native": {
    "android": {
      "sourceDir": "./android",
      "packageImportPath": "import com.builders.wallet.BuildersWalletPackage;"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.53.0"
  }
}
